.separator {
  content: "â€”";
  padding: 0 .4em 0 .2em;
  display: inline-block;
}

article {
  padding-top: 1em;
  a { 
    @extend .force-wrap; 
  }
  header {
    position: relative;
    h1 {
      margin: 0;
      a { text-decoration: none;
        &:hover { text-decoration: none; } }
    }
    p {
      font-size: .9em;
      color: lighten($text-color-light, 10);
      margin: 0;
      &.meta {
        @extend .sans;
      }
    }
    margin-bottom: 1em;

    @media only screen and (min-width: 768px) {
      margin-bottom: 1.5em;
    }
  }
  h2 {
    padding-top: 0.8em;
  }
  .entry-content & h2:first-child, header + h2 { padding-top: 0; }
  h2:first-child, header + h2 { background: none; }
  .feature {
    padding-top: .5em;
    margin-bottom: 1em;
    padding-bottom: 1em;
    background: $img-border bottom left repeat-x;
    line-height: 1.3em;
  }
  img, video, .flash-video {
    @extend .flex-content;
    @extend .basic-alignment;
    padding: .25em;
    background-color: #fff;
  }
  .no-border {
    border: none;
    border-radius: 0;
    -moz-border-radius: 0;
    box-shadow: none;
    background: transparent;
    padding: 0;
  }
  video, .flash-video { margin: 0 auto 1.5em; }
  video { display: block; width: 100%; }
  .flash-video {
    > div {
      position: relative;
      display: block;
      padding-bottom: 56.25%;
      padding-top: 1px;
      height: 0;
      overflow: hidden;
      iframe, object, embed {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }
    }
  }
  > footer {
    color: $text-color-light;
    margin-top: 2em;
    @extend .sans;
    p.meta {
      margin-bottom: .8em;
      font-size: .85em;
      clear: both;
      overflow: hidden;
    }
    .byline + time:before, time +time:before, .comments:before, .byline ~ .categories:before {
      @extend .separator;
    }
  }

}
