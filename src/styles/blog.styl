#content .blog-index {
  article {
	padding-top: 3em;
	padding-bottom: 1.5em;
	border-top: 4px solid $article-border;
  }
  article:first-child {
    padding-top: 1em;
    border-top: none;
  }
  article header { background: none; }
  article h1 {
    a { color: inherit; &:hover { color: $link-color-hover; } }
  }
  a[rel=full-article] {
    display: inline-block;
    margin-right: .5em;
  }
  footer {
    @extend .sans;
    margin-top: 1em;
  }
}

